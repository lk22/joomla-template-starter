<?xml version="1.0" encoding="utf-8"?>
<extension type="template" client="site" method="upgrade">
	<name>joomlastarter</name>
	<version>1.40</version>
	<creationDate>Oct 2023</creationDate>
	<author>Your Name</author>
	<authorEmail>Your Email</authorEmail>
	<copyright>(C) 2023 KG</copyright>
	<description>TPL_joomlastarter_XML_DESCRIPTION</description>
	<inheritable>1</inheritable>
	<files>
		<filename>index.php</filename>
		<filename>joomla.asset.json</filename>
		<filename>templateDetails.xml</filename>
		<folder>html</folder>
	</files>
	<media destination="templates/site/joomlastarter" folder="media">
		<folder>js</folder>
		<folder>css</folder>
		<folder>scss</folder>
		<folder>images</folder>
	</media>
	<positions>
		<position>header</position>
		<position>banner</position>
		<position>footer</position>
		<position>footer_bottom</position>
		<position>sidebar</position>
		<position>search</position>
		<position>breadcrumbs</position>
		<position>menu</position>
		<position>content-top</position>
		<position>content-bottom</position>
	</positions>
	<languages folder="language">
		<language tag="en-GB">en-GB/tpl_joomlastarter.ini</language>
		<language tag="en-GB">en-GB/tpl_joomlastarter.sys.ini</language>
	</languages>
	<config>
		<fields name="params">
			<fieldset name="advanced">
				<field
					name="logoFile"
					type="media"
					default=""
					label="TPL_CASSIOPEIA_LOGO_LABEL"
					showon="brand:1"
				/>

				<field
					name="siteTitle"
					type="text"
					default=""
					label="TPL_CASSIOPEIA_TITLE"
					filter="string"
					showon="brand:1"
				/>
			</fieldset>
		</fields>
	</config>
</extension>
